{
	"directories": [
		"~/.config",
		"~/.virtualenvs"
	],
	"git_repos": {
		"https://github.com/robbyrussell/oh-my-zsh.git": "~/.oh-my-zsh"
	},
	"apt": [
		"tmux",
		"vim-nox",
		"zsh"
	],
	"brew": [
		"macvim",
		"tmux",
		"zsh"
	],
	"commands": [
		"virtualenv -p `which python2` ~/.virtualenvs/neovim2 && source ~/.virtualenvs/neovim2/bin/activate && pip install jedi neovim flake8 && deactivate",
		"virtualenv -p `which python3` ~/.virtualenvs/neovim3 && source ~/.virtualenvs/neovim3/bin/activate && pip install jedi neovim flake8 && deactivate"
	],
	"link": {
		"bash_profile": "~/.bash_profile",
		"bashrc": "~/.bashrc",
		"ctags": "~/.ctags",
		"eslintrc": "~/.eslintrc",
		"bin": "~/.bin",
		"config/nvim": "~/.config/nvim",
		"config/pianobar": "~/.config/pianobar",
		"ctags": "~/.ctags",
		"dir_colors": "~/.dir_colors",
		"eslintrc": "~/.eslintrc",
		"git_template": "~/.git_template",
		"gitattributes": "~/.gitattributes",
		"gitconfig": "~/.gitconfig",
		"gitexcludes": "~/.gitexcludes",
		"gitignore": "~/.gitignore",
		"ideavimrc": "~/.ideavimrc",
		"inputrc": "~/.inputrc",
		"oh-my-zsh": "~/.oh-my-zsh/custom",
		"profile": "~/.profile",
		"psqlrc": "~/.psqlrc",
		"tmux.conf": "~/.tmux.conf",
		"wgetrc": "~/.wgetrc",
		"zsh": "~/.zsh",
		"zshrc": "~/.zshrc"
	},
	"system": {
		"Darwin": {
			"link": {
				"iterm2_profiles.json": "~/.iterm2_profiles.json"
			},
			"commands": [
				"brew tap universal-ctags/universal-ctags",
				"brew install --HEAD universal-ctags"
			]
		},
		"Linux": {
			"link": {
				"config/terminator": "~/.config/terminator",
				"config/redshift.conf": "~/.config/redshift.conf",
				"gtkrc-2.0": "~/.gtkrc-2.0",
				"nethackrc": "~/.nethackrc",
				"Xdefaults": "~/.Xdefaults",
				"xinitrc": "~/.xinitrc",
				"Xresources": "~/.Xresources",
				"xsessionrc": "~/.xsessionrc"
			}
		}
	}
}
