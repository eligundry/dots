{
    "suggest.autoTrigger": "always",
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "json",
        "go"
    ],
    "coc.preferences.extensionUpdateCheck": "never",
    "prettier.requireConfig": true
}
